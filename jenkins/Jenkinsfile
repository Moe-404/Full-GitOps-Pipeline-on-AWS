pipeline {
    agent {
        kubernetes {
            label 'devops-gp-pipeline'
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command:
    - /busybox/cat
    tty: true
    volumeMounts:
    - name: kaniko-secret
      mountPath: /kaniko/.docker
  - name: aws-cli
    image: amazon/aws-cli:latest
    command:
    - cat
    tty: true
    env:
    - name: AWS_DEFAULT_REGION
      value: "us-east-1"
  volumes:
  - name: kaniko-secret
    emptyDir: {}
"""
        }
    }
    
    environment {
        // AWS Configuration
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ACCOUNT_ID = "627073650373"
        ECR_REPOSITORY = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/devops-gp-repository"
        IMAGE_TAG = "${BUILD_NUMBER}"
        
        // Application Repository
        NODEJS_REPO = 'https://github.com/Moe-404/jenkins_nodejs_example.git'
        
        // Slack Configuration
        SLACK_WEBHOOK = credentials('slack-webhook-url')
        SLACK_CHANNEL = '#all-jenkins'
    }
    
    stages {
        stage('Clone Repository') {
            steps {
                script {
                    echo "ðŸ“¥ Cloning NodeJS application repository..."
                    
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: 'main']],
                        userRemoteConfigs: [[
                            url: "${env.NODEJS_REPO}",
                            credentialsId: 'github-credentials'
                        ]]
                    ])
                    
                    echo "âœ… Repository cloned successfully"
                }
            }
        }
        
        stage('Validate Dockerfile') {
            steps {
                script {
                    echo "ðŸ” Checking for Dockerfile..."
                    if (!fileExists('Dockerfile')) {
                        echo "âš ï¸ No Dockerfile found, creating a basic one..."
                        writeFile file: 'Dockerfile', text: '''FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --only=production

# Copy application code
COPY . .

# Expose port
EXPOSE 3000

# Start application
CMD ["npm", "start"]
'''
                    } else {
                        echo "âœ… Dockerfile found"
                    }
                }
            }
        }
        
        stage('Build and Push to ECR') {
            steps {
                script {
                    echo "ðŸ” Setting up ECR authentication and building with Kaniko..."
                    
                    // Prepare ECR authentication
                    container('aws-cli') {
                        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                            sh '''
                                echo "Creating ECR repository if it doesn't exist..."
                                aws ecr describe-repositories --repository-names devops-gp-repository --region ${AWS_DEFAULT_REGION} || \
                                aws ecr create-repository --repository-name devops-gp-repository --region ${AWS_DEFAULT_REGION}
                                
                                echo "Getting ECR login token..."
                                aws ecr get-login-password --region ${AWS_DEFAULT_REGION} > /tmp/ecr-password
                                
                                echo "Setting up Kaniko authentication..."
                                mkdir -p /kaniko/.docker
                                
                                # Create Docker config for Kaniko
                                cat > /kaniko/.docker/config.json << EOF
{
    "auths": {
        "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com": {
            "username": "AWS",
            "password": "$(cat /tmp/ecr-password)"
        }
    }
}
EOF
                                echo "âœ… ECR authentication configured"
                            '''
                        }
                    }
                    
                    // Build and push with Kaniko
                    container('kaniko') {
                        sh '''
                            echo "ðŸ³ Building and pushing image with Kaniko..."
                            /kaniko/executor \
                                --dockerfile=./Dockerfile \
                                --context=dir://$PWD \
                                --destination=${ECR_REPOSITORY}:${IMAGE_TAG} \
                                --destination=${ECR_REPOSITORY}:latest \
                                --cache=true
                                
                            echo "âœ… Image built and pushed successfully"
                            echo "ðŸ“¦ Image: ${ECR_REPOSITORY}:${IMAGE_TAG}"
                            echo "ðŸ“¦ Image: ${ECR_REPOSITORY}:latest"
                        '''
                    }
                }
            }
        }
        
        stage('Verify Deployment') {
            steps {
                container('aws-cli') {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                        script {
                            echo "âœ… Verifying image deployment in ECR..."
                            sh '''
                                echo "ðŸ“Š Checking images in ECR repository:"
                                aws ecr describe-images \
                                    --repository-name devops-gp-repository \
                                    --region ${AWS_DEFAULT_REGION} \
                                    --query 'imageDetails[*].[imageTags[0],imagePushedAt,imageSizeInBytes]' \
                                    --output table
                                
                                echo "âœ… Successfully verified images in ECR"
                            '''
                        }
                    }
                }
            }
        }
    }
    
    post {
        success {
            script {
                def duration = currentBuild.durationString.replace(' and counting', '')
                
                slackSend(
                    channel: env.SLACK_CHANNEL,
                    color: 'good',
                    message: "âœ… *Pipeline SUCCESS* - ${env.JOB_NAME} #${env.BUILD_NUMBER}\n" +
                            "Duration: ${duration}\n" +
                            "Image: `${ECR_REPOSITORY}:${IMAGE_TAG}`\n" +
                            "Repository: ${env.NODEJS_REPO}\n" +
                            "Platform: EKS + Kaniko ðŸš€"
                )
            }
        }
        
        failure {
            script {
                def failedStage = env.STAGE_NAME ?: 'Unknown'
                slackSend(
                    channel: env.SLACK_CHANNEL,
                    color: 'danger',
                    message: "âŒ *Pipeline FAILED* - ${env.JOB_NAME} #${env.BUILD_NUMBER}\n" +
                            "Failed Stage: ${failedStage}\n" +
                            "Repository: ${env.NODEJS_REPO}\n" +
                            "Logs: ${env.BUILD_URL}console\n" +
                            "Please check the build logs for details ðŸ”"
                )
            }
        }

        
        always {
            cleanWs(
                cleanWhenAborted: true,
                cleanWhenFailure: true,
                cleanWhenNotBuilt: true,
                cleanWhenSuccess: true,
                cleanWhenUnstable: true,
                deleteDirs: true
            )
        }
    }
}