pipeline {
    agent {
        docker {
            image 'alpine:latest'
            args '--entrypoint=""'
        }
    }
    
    stages {
        stage('Test SCM') {
            steps {
                script {
                    echo "âœ… Successfully pulled Jenkinsfile from SCM!"
                    echo "Current directory: ${pwd()}"
                    sh 'ls -la'
                    sh 'echo "Docker agent working!"'
                }
            }
        }
    }
    
    post {
        always {
            echo "Pipeline test completed"
        }
    }
}